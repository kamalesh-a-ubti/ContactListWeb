@model ContactListWeb.Models.Contact

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0">Add New Contact</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" 
                                   class="form-control" 
                                   required 
                                   placeholder="Enter contact name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Please enter a contact name
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNo" class="form-label"></label>
                            <input asp-for="PhoneNo" 
                                   class="form-control" 
                                   required 
                                   placeholder="Enter phone number" />
                            <span asp-validation-for="PhoneNo" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Please enter a phone number
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-info">Add</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap CSS (add to your layout file or head section) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- JavaScript for form validation -->
<script>
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
<!-- Bootstrap JS (add to your layout file before closing body tag) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>