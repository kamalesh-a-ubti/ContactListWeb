@model List<ContactListWeb.Models.Contact>
<h2>Your Contacts</h2>
<p><a asp-action="Create">Add New Contact</a></p>
<form asp-action="Search" method="get">
    <input type="text" name="searchTerm" placeholder="Search by name or phone" />
    <button type="submit">Search</button>
</form>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.PhoneNo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@contact.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@contact.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>